# .env.example â€” G_TaskCenter configuration template

# --- Gmail ---
GMAIL_TOKEN_PATH=credentials/gmail_token.pickle

# --- Notion ---
# Token: obtain from https://www.notion.so/my-integrations
NOTION_TOKEN=ntn_your_secret_here
# Database ID: find in URL of the database view
NOTION_TASKS_DB_ID=your_notion_db_id

# --- Outlook ---
# Microsoft Graph credentials (obtain from Entra / Azure AD portal)
OUTLOOK_CLIENT_ID=your_client_id
OUTLOOK_TENANT_ID=your_tenant_id
OUTLOOK_CLIENT_SECRET=your_client_secret

# --- MCP Security (optional) ---
MCP_RATE_LIMIT_PER_MINUTE=60
MCP_AUDIT_ENABLED=true
